<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:local="clr-namespace:Eggsclaim" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Eggsclaim.LogPage" Title="{Binding Title}" x:Name="BrowseItemsPage">
	<ContentPage.Content>
		<StackLayout>
			<local:InfiniteListView x:Name="ItemsListView" ItemsSource="{Binding LogItems}" VerticalOptions="FillAndExpand" HasUnevenRows="true" IsPullToRefreshEnabled="false" IsRefreshing="{Binding IsBusy, Mode=OneWay}" LoadMoreCommand="{Binding LoadOlderItemsCommand}">>
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Padding="10">
								<Label Text="{Binding SequenceId}" LineBreakMode="NoWrap" Style="{DynamicResource ListItemTextStyle}" FontSize="16" />
								<Label Text="{Binding Description}" LineBreakMode="NoWrap" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="13" />
							</StackLayout>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</local:InfiniteListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
